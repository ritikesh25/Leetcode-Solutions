Middle of the linked list

/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode() : val(0), next(nullptr) {}
 *     ListNode(int x) : val(x), next(nullptr) {}
 *     ListNode(int x, ListNode *next) : val(x), next(next) {}
 * };
 */
class Solution {
public:
    ListNode* middleNode(ListNode* head) {

        int count = 0;
        ListNode* temp = head;

        while(temp != nullptr){
            count += 1;
            temp = temp->next;
        }

        int ans;
        if(count%2 == 0){
            ans = count/2 + 1;
        }
        else{
            ans = count/2 + 1;
        }

        for(int i=1;i<ans;i++){
            head = head->next;
        }

        return head;
        
    }
};

TortoiseHare Method -->

class Solution {
public:
    ListNode* middleNode(ListNode* head) {

        ListNode* slow = head;
        ListNode* fast = head;

        while(fast != NULL && fast->next != NULL){
            slow = slow->next;
            fast = fast->next->next;
        }

        return slow;
        
    }
};
