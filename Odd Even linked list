First Approach -->
class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {

        vector<int> v;

        if(head == nullptr || head->next == nullptr){
            return head;
        }

        ListNode* temp = head;

        while(temp != nullptr && temp->next != nullptr){
            v.push_back(temp->val);
            temp = temp->next->next;
        }
        if(temp){
            v.push_back(temp->val);
        }

        temp = head->next;

        while(temp != nullptr && temp->next != nullptr){
            v.push_back(temp->val);
            temp = temp->next->next;
        }
        if(temp){
            v.push_back(temp->val);
        }

        temp = head;

        int i = 0;

        while(temp != nullptr){
            temp->val = v[i];
            temp = temp->next;
            i++;
        }

        return head;  
    }
};

Second Method -->
In this method we use to change the links

class Solution {
public:
    ListNode* oddEvenList(ListNode* head) {

        if(head == NULL || head->next == NULL) return head;

        ListNode* evenHead = head->next;
        ListNode* odd = head;
        ListNode* even = head->next;

        while(even != NULL && even->next != NULL){
            odd->next = odd->next->next;
            odd = odd->next;

            even->next = even->next->next;
            even = even->next;
        }

        odd->next = evenHead;

        return head;
  
    }
};
